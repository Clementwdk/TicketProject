extends ../layout

block content
  h1.
    #{title}
  form(method="post",action="/tickets")
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='description') Description
      .col-md-7
        input.form-control(type='text', name='description', id='description', placeholder='Description', autofocus, autocomplete='description', required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='description') Urgency
      .col-md-7
        input.form-control(type='number', name='urgency', id='urgency', placeholder='Urgency', autocomplete='urgency', required)
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='numberproblem') Problem number
      .col-md-7
        input.form-control(type='number', name='numberproblem', id='numberproblem', placeholder='Problem number', autocomplete='numberproblem', required)
    .form-group
      .offset-md-3.col-md-7.pl-2
        button.col-md-3.btn.btn-lg.btn-primary(type='submit')
          | Submit